{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block content %}
    <h1>Mon compte</h1>
    
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
  <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
  <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
</svg>
    {% if is_granted('ROLE_ADMIN') %}
        <small><a href="/admin">Vous êtes un administrateur, accéder au backoffice ?</a></small><br/>
    {% endif %}
    <p class="fw-bold">Bienvenue {{ app.user.prenom }} dans votre compte.</p><br/>

   <p class="fst-italic"> C'est dans cet espace que vous allez pouvoir gérer toutes vos informations personnelles</p>
   
   
        
         {{ form_label(form.password) }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'} }) }}
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'} }) }}
        {{ form_label(form.prenom) }}
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'} }) }}
        {{ form_label(form.login) }}
        {{ form_widget(form.login, {'attr': {'class': 'form-control'} }) }}
        {{ form_label(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}

        <button class="btn">{{ button_label|default('Save') }}</button>
        
        


   
    {% endblock %}

