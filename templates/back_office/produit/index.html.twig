
{% extends 'back_office/admin_dashboard/dashboard.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block content %}

 <div class="pagetitle">
        <h1>Produit </h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <h1>Produit </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix</th>
                <th>Image</th>
                <th>Libelle</th>
                <th>Type</th>
                <th>Quantite</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.prix }}</td>
                <td><img src="{{ asset('uploads/'~produit.image) }}" style=" width:60px; height:50px; " alt=""/></td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.type }}</td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.Description }}</td>
                <td>
                    <a href="{{ path('app_back_office_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_back_office_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_office_produit_new') }}">Create new</a>
{% endblock %}
