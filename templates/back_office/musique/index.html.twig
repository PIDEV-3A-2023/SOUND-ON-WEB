{% extends 'base.html.twig' %}

{% block title %}Musique index{% endblock %}

{% block body %}
    <h1>Musique index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Chemin</th>
                <th>DateCreation</th>
                <th>Longueur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for musique in musiques %}
            <tr>
                <td>{{ musique.id }}</td>
                <td>{{ musique.nom }}</td>
                <td>{{ musique.chemin }}</td>
                <td>{{ musique.dateCreation ? musique.dateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ musique.longueur }}</td>
                <td>
                    <a href="{{ path('app_back_office_musique_show', {'id': musique.id}) }}">show</a>
                    <a href="{{ path('app_back_office_musique_edit', {'id': musique.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_office_musique_new') }}">Create new</a>
{% endblock %}
