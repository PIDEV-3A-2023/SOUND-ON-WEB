{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Visiteur</th>
                <th>StarCount</th>
                <th>Rate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>{{ categorie.visiteur }}</td>
                <td>{{ categorie.starCount }}</td>
                <td>{{ categorie.rate }}</td>
                <td>
                    <a href="{{ path('app_back_office_categorie_show', {'id': categorie.id}) }}">show</a>
                    <a href="{{ path('app_back_office_categorie_edit', {'id': categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_office_categorie_new') }}">Create new</a>
{% endblock %}
