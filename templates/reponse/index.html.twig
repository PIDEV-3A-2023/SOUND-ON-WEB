{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block reclamation %}
    <h1>Reponse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>DateCreation</th>
                <th>DateUpdate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.id }}</td>
                <td>{{ reponse.message }}</td>
                <td>{{ reponse.dateCreation ? reponse.dateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ reponse.dateUpdate ? reponse.dateUpdate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_reponse_show', {'id': reponse.id}) }}">show</a>
                    <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}">edit</a>

                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
