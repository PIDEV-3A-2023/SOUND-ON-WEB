{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block stylesheets %}
   
     
     <link rel="stylesheet" href="{{asset('template/css/css1.css')}}">

    {% endblock %}

    

{% block content %}

<!-- ##### Breadcumb Area Start ##### -->
<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(/template/img/bg-img/breadcumb3.jpg);">
        <div class="bradcumbContent">
        <h2>Boutique</h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->

<div class="cards">
{% for message in app.flashes('notification') %}
        <div class="alert alert-info alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
    {% endfor %}
  {% for produit in produits %}

  <div class="card">
    <div class="card__image-holder">
      <img class="card__image" src="{{ asset('uploads/'~produit.image) }}" alt="desert" style="width:500px;height:400px"  />
    </div>
    <div class="card-title">
      <a href="#" class="toggle-info btn">
        <span class="left"></span>
        <span class="right"></span>
      </a>
      <h2>
          <td>{{ produit.libelle }}</td>
          <a><br><td>{{ produit.type }}</td></a>
          <a><br><td>Disponibilite:{{ produit.Quantite }}</td></a>
          <br><td>${{ produit.prix }}</td>
      </h2>
    </div>
    <div class="card-flap flap1">
      <div class="card-description">
        <td>{{ produit.description }}</td>
      </div>
      <div class="card-flap flap2">
        <div class="card-actions">
        
          {# <a href="{{ path('app_front_office_produit_commande', {'id': produit.id}) }}" class="btn">ADD ARTICLE</a> #}
          
          <a href="{{ path('app_front_office_panier_cart_add', {'id': produit.id}) }}" class="btn">ADD To Cart</a>
        </div>
      </div>
    </div>
  </div>
{% endfor %}

</div>




{% endblock %}


