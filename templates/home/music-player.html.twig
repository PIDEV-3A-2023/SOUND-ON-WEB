 <!-- ##### Music Player ##### -->
 <div style="position: fixed; left: 0; bottom: 0; z-index:100; width:100%; height:65px;">
    <div class="song-play-area" style="display: flex;flex-direction: row-reverse;padding-top: 10px;">
        <div class="song-name" style="width:50%;margin-left:30px;align-self: center;">
            {% if song is defined %}
            <p>{{song.nom}}</p>
            {% endif %}
        </div>
        <audio preload="auto" controls style="margin-left:40%; border:1px solid red;">
            {% if song is defined %}
            <source src="{{ path('app_front_office_music_content', {'id' : song.id} ) }}">
            {% else %}
            <source src="{{asset('template/audio/dummy-audio.mp3')}}">
            {% endif %}
        </audio>
    </div>
</div>